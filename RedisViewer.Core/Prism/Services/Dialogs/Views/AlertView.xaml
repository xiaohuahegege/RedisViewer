<controls:Window x:Class="Prism.Services.Dialogs.AlertView"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:controls="http://schemas.imiyu.cc/controls"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 ShowInTaskbar="False"
                 Width="300"
                 Height="120"
                 ResizeMode="NoResize"
                 x:ClassModifier="internal"
                 Icon="/App.ico">
    <Grid Background="#FAFAFA">
        <TextBlock Text="{Binding Message}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="15" />
    </Grid>
</controls:Window>